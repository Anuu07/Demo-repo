   "source": [
    "import tkinter as tk\n",
    "def even_odd():\n",
    "    num1 = int(entry.get())\n",
    "    if num1%2==0:\n",
    "        result.set(\"Even\")\n",
    "    else:\n",
    "        result.set(\"Odd\")\n",
    "root = tk.Tk() \n",
    "root.title(\"My First Tkinter App\") \n",
    "root.geometry(\"700x200\")  # Width x Height \n",
    "\n",
    "label = tk.Label(root, text=\"Enter VALUE:\") \n",
    "label.pack() \n",
    "\n",
    "entry = tk.Entry(root) \n",
    "entry.pack() \n",
    "\n",
    "button = tk.Button(root, text=\"even or odd\", command=even_odd) \n",
    "button.pack()\n",
    "\n",
    "result = tk.StringVar()\n",
    "label_result = tk.Label(root,  textvariable=result) \n",
    "label_result.pack()\n",
    "\n",
    "root.mainloop()\n"
   ]
